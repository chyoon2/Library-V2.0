@{
  Layout = "_Layout";
}

@model Library.Models.Copy

<h4>Add new Copies of Book</h4>
@ViewBag.BookDetails.BookName

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.BookId)
    
    @* @Html.DisplayFor(model => model.BookName) *@

    <label for="numCopies">Number of Copies</label>
    <input type="number" id="numCopies" name="numCopies">

    <input type="submit" value="Add Copies" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all books", "Index")</p>